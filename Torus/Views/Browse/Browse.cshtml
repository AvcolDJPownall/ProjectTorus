@model IEnumerable<Torus.Models.TorusPost>

@{
    ViewData["Title"] = "Browse Assets";
}
<!DOCTYPE html>

<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/browse.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/lib/fontawesome-6.1.1-web/css/all.css" asp-append-version="true"/>
    <script src="~/js/browse.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>
<body>
    <div class="text-center">
        <h1>@ViewData["Title"]</h1>
    </div>
    <hr>
    <div class="asset-search">
        <div class="input-group">
           <span class="input-group-text border-0">
                <i class="fas fa-search"></i>
            </span>
            <form method="GET" action="~/Browse/Search">
                <input type="search" name="q" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
            </form>
        </div>
    </div>
    <div class="card-cont" id="personal">
        @foreach (TorusPost item in Model)
        {
            string[] randomPlaceholders = new string[4] { "donut.png", "liminal_junk.png", "shader_ngloss.png", "congruent_cheesewedge.png" };
            int imageIndex = new Random().Next(0, Math.Max(randomPlaceholders.Length - 1, 0));

            string fileName = item.ImageFileGUID != "" ? string.Format("{0}.png", item.ImageFileGUID) : randomPlaceholders[imageIndex];
            string imageURL = "/img/items/" + fileName;

            string itemPrice = item.Cost.ToString("c2");
            string postURL = "TorusPost/Details/" + item.PostID;

            <button class="card">
                <a asp-controller="TorusPost" asp-action="Details" asp-route-id="@item.PostID">
                    <img class="card-img-top" src="@imageURL" width="10">
                    <hr>
                     </a>
                    <div style="align-content:center;overflow:hidden;" class="card-body">
                        <p>@item.Title</p>
                    </div>
                    @itemPrice
            </button>
        }
    </div>
